.dropdown
  position: relative
  display: inline-block

.dropdown-list
  z-index: $layer-dropdown
  position: absolute
  display: grid
  grid-template-rows: 1fr
  grid-row-gap: 10px
  padding: 10px
  top: 100%
  right: 0
  margin: 0
  font-family: $font-family
  background-color: $color-bg-secondary
  border-radius: 10px
  box-shadow: 0px 8px 20px $color-shadow
  list-style: none
  opacity: 0
  visibility: hidden
  transition: opacity 200ms ease, transform 200ms ease, visibility 200ms

.dropdown-list-active
  opacity: 1
  visibility: visible
  transform: translateY(10px)

.dropdown-list-item
  box-sizing: border-box
  display: flex
  flex-direction: row
  justify-content: center
  align-items: center
  width: 100%
  height: 37px
  padding: 0 20px
  font-weight: 600
  font-size: $font-size-s
  color: $color-text
  background-color: transparent
  border: none
  border-radius: 6px
  outline: none
  cursor: pointer
  white-space: nowrap

  &:not([disabled]):hover
    background-color: $color-bg-hover
