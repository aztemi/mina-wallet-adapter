.button
  display: flex
  align-items: center
  height: 48px
  line-height: 48px
  padding: 0 24px
  font-family: $font-family
  font-size: $font-size-m
  font-weight: 600
  color: $color-text
  background-color: transparent
  border: none
  border-radius: 4px
  cursor: pointer

  &:not([disabled])
    &:focus-visible
      outline-color: $color-outline

    &:hover
      background-color: $color-bg-hover

  &[disabled]
    background-color: $color-bg-disabled
    color: $color-text-disabled
    cursor: not-allowed

.button-trigger
  background-color: $color-bg-secondary

.button-end-icon,
.button-start-icon,
.button-end-icon img,
.button-start-icon img
  display: flex
  align-items: center
  justify-content: center
  width: 24px
  height: 24px

.button-end-icon
  margin-left: 12px

.button-start-icon
  margin-right: 16px
